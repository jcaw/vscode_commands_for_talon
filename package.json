{
  "name": "vscode-talon-helpers",
  "displayName": "VSCode Talon Helpers",
  "description": "Helper commands for Talon Voice integration with VSCode",
  "version": "0.1.0",
  "publisher": "talon-helpers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jcaw/vscode_commands_for_talon"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "pokey.command-server"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jcaw.getFilePath",
        "title": "Get Current File Path"
      },
      {
        "command": "jcaw.getCursorPosition",
        "title": "Get Cursor Position"
      },
      {
        "command": "jcaw.getTextOnLine",
        "title": "Get Text On Line"
      },
      {
        "command": "jcaw.getSelectedText",
        "title": "Get Selected Text"
      },
      {
        "command": "jcaw.getTextBetweenOffsets",
        "title": "Get Text Between Offsets"
      },
      {
        "command": "jcaw.getDocumentBounds",
        "title": "Get Document Bounds"
      },
      {
        "command": "jcaw.getDictationContext",
        "title": "Get Dictation Context"
      },
      {
        "command": "jcaw.getVisibleRange",
        "title": "Get Visible Range"
      },
      {
        "command": "jcaw.getCurrentWord",
        "title": "Get Current Word"
      },
      {
        "command": "jcaw.getSymbolAtPosition",
        "title": "Get Symbol At Position"
      },
      {
        "command": "jcaw.getIndentationLevel",
        "title": "Get Indentation Level"
      },
      {
        "command": "jcaw.getLineCount",
        "title": "Get Line Count"
      },
      {
        "command": "jcaw.getLanguageId",
        "title": "Get Language ID"
      },
      {
        "command": "jcaw.getVisibleLineNumbers",
        "title": "Get Visible Line Numbers"
      },
      {
        "command": "jcaw.getProjectRoot",
        "title": "Get Project Root"
      },
      {
        "command": "jcaw.claudeCodeFocusPanel",
        "title": "Focus Claude Code (Panel Strategy)"
      },
      {
        "command": "jcaw.claudeCodeFocusWithClick",
        "title": "Focus Claude Code (Click Strategy)"
      },
      {
        "command": "jcaw.claudeCodeFocusAuxiliary",
        "title": "Focus Claude Code (Auxiliary Bar)"
      },
      {
        "command": "jcaw.claudeCodeFocusSidebar",
        "title": "Focus Claude Code (Sidebar)"
      },
      {
        "command": "jcaw.getClaudeCodeApi",
        "title": "Get Claude Code API"
      },
      {
        "command": "jcaw.getAllCommandsHierarchical",
        "title": "Get All Commands (Hierarchical)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "package": "vsce package",
    "reinstall": "npm run compile && code --uninstall-extension talon-helpers.vscode-talon-helpers && npm run package && code --install-extension vscode-talon-helpers-0.1.0.vsix"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.70.0",
    "typescript": "^5.0.0"
  }
}
